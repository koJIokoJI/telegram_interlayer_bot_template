services:

  redis:
    image: redis:latest
    container_name: redis_container
    restart: unless-stopped
    env_file: .env
    ports:
      - "${REDIS_PORT}:6379"
    volumes:
      - ./.redis_data/:/data
    healthcheck:
      test: ["CMD", "redis-cli", "-a", "PING"]
      interval: 5s
      timeout: 3s
      retries: 5